{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "outDir": "bld"
  },
  "filesGlob": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./typings/**/*d.ts"
  ],
  "exclude": [
    "bld",
    "node_modules"
  ]
}